<%= simple_form_for(post) do |f| %>
    <%= f.input :title %>
    <%= f.input :is_published %>
    <%= f.input :publish_date, as: :string, input_html: { id: 'publish_date_picker' } %>
    <%= f.input :tag_list %>
    <%= f.input :content %>
    <% if post.new_record? %>
      <%= f.submit 'Create Post' %>
    <% else %>
      <%= f.submit 'Save Post' %>
    <% end %>
<% end %>
