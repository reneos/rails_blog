<%= simple_form_for(post) do |f| %>
    <%= f.input :title %>
    <%= f.input :is_published %>
    <%= f.input :publish_date, html5: true %>
    <%= f.input :content %>
    <% if post.new_record? %>
      <%= f.submit 'Create Post' %>
    <% else %>
      <%= f.submit 'Save Post' %>
    <% end %>
<% end %>
