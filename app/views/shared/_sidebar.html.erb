<h3>Posts by Tag</h3>
<% if ActsAsTaggableOn::Tag.any? %>
<ul class="list-group list-group-flush">
  <% Post.published.tag_counts_on(:tags).order(:name).each do |tag| %>
  <li class="list-group-item d-flex justify-content-between align-items-center relative">
    <%= tag.name %>
    <span class="badge badge-secondary badge-pill"><%= Post.published.tagged_with(tag).count %></span>
    <%= link_to "", posts_path(tag: tag.name), class: "full-link"  %>
  </li>
  <% end %>
</ul>
<% else %>
  <div class="alert alert-light">There are no tagged posts yet.</div>
<% end %>

