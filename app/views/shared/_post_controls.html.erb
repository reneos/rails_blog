<%= link_to "Edit", edit_post_path(post), class: "badge badge-secondary" %>
<% if @post.published? %>
  <%= link_to 'Unpublish', unpublish_post_path(@post), method: :patch, class: 'badge badge-info' %>
<% else %>
  <%= link_to 'Publish', publish_post_path(@post), method: :patch, class: 'badge badge-info' %>
<% end %>
<%= link_to "Delete", post_path(post), method: :delete, class: "badge badge-danger"  %>
